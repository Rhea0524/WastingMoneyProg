<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4332"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="24dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="48dp">

        <!-- Header with Logo and Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Logo -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/logo">
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Menu icon -->
            <LinearLayout
                android:id="@+id/menuIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="12dp"
                android:contentDescription="Open menu"
                android:background="?android:attr/selectableItemBackgroundBorderless">

                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:layout_marginBottom="4dp" />
                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:layout_marginBottom="4dp" />
                <View
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <!-- Dashboard Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="Personal Dashboard"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Legend -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#FF6B6B"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OVERSPEND"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginEnd="16dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#0D9508"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUDGET"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:layout_marginEnd="16dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="#0B7138"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTUAL"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Budget Chart Section -->
        <LinearLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <!-- LIGHTS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LIGHTS"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp">

                    <!-- Budget Bar -->
                    <View
                        android:id="@+id/lightsActualBar"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:background="#2D5A41" />

                    <!-- Actual Bar -->
                    <View
                        android:id="@+id/lightsBudgetBar"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="#04762F" />

                </FrameLayout>
            </LinearLayout>

            <!-- CLOTHES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLOTHES"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp">

                    <View
                        android:id="@+id/clothesActualBar"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="#2D5A41" />

                    <View
                        android:id="@+id/clothesBudgetBar"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:background="#10A817" />

                </FrameLayout>
            </LinearLayout>

            <!-- CAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAR"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp">

                    <View
                        android:id="@+id/carActualBar"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="#2D5A41" />

                    <View
                        android:id="@+id/carBudgetBar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#1AC539" />

                    <!-- Overspend indicator -->
                    <View
                        android:id="@+id/carOverspendBar"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="200dp"
                        android:background="#FF6B6B" />

                </FrameLayout>
            </LinearLayout>

            <!-- TOILETRIES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TOILETRIES"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp">

                    <View
                        android:id="@+id/toiletriesActualBar"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="#2D5A41" />

                    <View
                        android:id="@+id/toiletriesBudgetBar"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="#12A40D" />

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Controls Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <!-- Month Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MONTH"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/monthSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp" />

            <!-- Set Goal Button -->
            <Button
                android:id="@+id/setGoalButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="SET GOAL"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_background"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>