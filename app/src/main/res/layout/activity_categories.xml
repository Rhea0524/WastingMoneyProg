<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1B4332">

    <!-- Header with Logo and Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Logo placeholder -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/logo">


        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Menu icon -->
        <LinearLayout
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@android:color/white"
                android:layout_marginBottom="4dp" />
            <View
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@android:color/white"
                android:layout_marginBottom="4dp" />
            <View
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <!-- Categories Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="CATEGORIES"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Charts Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp">

        <!-- Monthly Graph -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Graph"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <!-- Bar Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#0DBC21"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#0BB32A"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#0A9B40"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#099517" />

            </LinearLayout>

            <!-- Chart Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GROCERIES"
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CAR"
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CLOTHING"
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="LIGHTS"
                    android:textColor="@android:color/white"
                    android:textSize="6sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- Trends Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trends"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginBottom="8dp" />

            <!-- Trend Bars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:background="@drawable/trend_bar_background"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="16dp"
                    android:background="@drawable/trend_bar_background"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="160dp"
                    android:layout_height="16dp"
                    android:background="@drawable/trend_bar_background"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="120dp"
                    android:layout_height="16dp"
                    android:background="@drawable/trend_bar_background" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Category Circles Grid -->
    <GridLayout
        android:id="@+id/categories_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:columnCount="2"
        android:rowCount="3">

        <!-- TOILETRIES -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TOILETRIES"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- CAR -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CAR"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- WATER & LIGHTS -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="WATER\n&amp;\nLIGHTS"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- GROCERIES -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="GROCERIES"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- CLOTHING -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CLOTHING"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- OTHER -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/circle_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="OTHER"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </FrameLayout>

    </GridLayout>

</LinearLayout>